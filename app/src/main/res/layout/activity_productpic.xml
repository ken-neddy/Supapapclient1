<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Productpic">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title2"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Add your product here"
        android:textSize="22sp"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <ImageView
        android:id="@+id/ImageView1"
        android:layout_width="356dp"
        android:layout_height="324dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/cart1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/whitebgtextview"
        android:padding="50dp"
        android:text="@string/whitebgtxt"
        app:layout_constraintBottom_toTopOf="@id/idcapturepic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ImageView1" />

    <Button
        android:id="@+id/idcapturepic"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:text="capture"
        app:layout_constraintTop_toBottomOf="@id/whitebgtextview"
        app:layout_constraintBottom_toTopOf="@id/Gallery"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="10dp"
        android:textAllCaps="false"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="563dp" />

    <Button
        android:id="@+id/Gallery"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:text="Gallery"
        app:layout_constraintTop_toBottomOf="@id/idcapturepic"
        app:layout_constraintBottom_toTopOf="@id/Gallery"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="10dp"
        android:textAllCaps="false"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="563dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
